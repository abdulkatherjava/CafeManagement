{
  "info": {
    "_postman_id": "cafe-management-collection",
    "name": "CafeManagement API",
    "description": "Collection covering Category and Menu Item endpoints for CafeManagement (/api/v1). Update the `baseUrl` variable to point at your running server.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Category",
      "item": [
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"categoryName\": \"Coffee\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/categories",
              "host": ["{{baseUrl}}"],
              "path": ["categories"]
            }
          }
        },
        {
          "name": "Update Category",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"categoryName\": \"Cold Beverages\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/categories/{{categoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["categories", "{{categoryId}}"],
              "variable": [
                {
                  "key": "categoryId",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Category by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/categories/{{categoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["categories", "{{categoryId}}"],
              "variable": [
                {
                  "key": "categoryId",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Category",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/categories/{{categoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["categories", "{{categoryId}}"],
              "variable": [
                {
                  "key": "categoryId",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Search Categories by Name",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/categories/search?name={{searchName}}",
              "host": ["{{baseUrl}}"],
              "path": ["categories", "search"],
              "query": [
                {
                  "key": "name",
                  "value": "Latte",
                  "description": "Partial match search string"
                }
              ],
              "variable": [
                {
                  "key": "searchName",
                  "value": "Latte"
                }
              ]
            }
          }
        },
        {
          "name": "Get All Categories (Page & Sort)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"page\": 0,\n  \"size\": 10,\n  \"sort\": [\"categoryName,asc\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/categories",
              "host": ["{{baseUrl}}"],
              "path": ["categories"]
            }
          }
        }
      ]
    },
